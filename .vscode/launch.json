{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python Debugger: Input file",
			"type": "debugpy",
			"request": "launch",
			"program": "main.py",
			"pathMappings": [
				{
					"localRoot": "${workspaceFolder}",
					"remoteRoot": "."
				}
			],
			"console": "integratedTerminal",
			"args": ["--codegen","./input.c"]
		},
		{
			"name": "Python Debugger: Current File",
			"type": "debugpy",
			"request": "launch",
			"program": "main.py",
			"pathMappings": [
				{
					"localRoot": "${workspaceFolder}",
					"remoteRoot": "."
				}
			],
			"console": "integratedTerminal",
			"args": ["--codegen","./writing-a-c-compiler-tests/tests/chapter_4/valid/and_false.c"]
		},
		{
			"name": "Python Debugger: All",
			"type": "debugpy",
			"request": "launch",
			"program": "tests/test_all_test_files.py",
			"pathMappings": [
				{
					"localRoot": "${workspaceFolder}",
					"remoteRoot": "."
				}
			],
			"console": "integratedTerminal",
		}
	]
}